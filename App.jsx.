import React, { useState, useEffect, useCallback } from 'react';
import { 
  Scissors, Sparkles, Play, ChevronRight, ChevronLeft,
  Youtube, Film, CheckCircle2, Volume2, Zap, UploadCloud, 
  BrainCircuit, ChevronDown, ChevronUp, Video, MessageCircle, 
  UserCircle, Music, Star
} from 'lucide-react';

// Environment Constants
const getApiKey = () => {
  try { return import.meta.env.VITE_GEMINI_API_KEY || ""; } catch (e) { return ""; }
};

const apiKey = getApiKey();
const GEN_URL = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-09-2025:generateContent?key=${apiKey}`;
const TTS_URL = `https://generativelanguage.googleapis.com/v1beta/models/gemini-2.5-flash-preview-tts:generateContent?key=${apiKey}`;

const App = () => {
  // --- App State ---
  const [step, setStep] = useState(1);
  const [activeTab, setActiveTab] = useState('plan');
  const [isGenerating, setIsGenerating] = useState(false);
  const [gamePlan, setGamePlan] = useState(null);
  const [vibeMode, setVibeMode] = useState('petty');
  const [isConsoleOpen, setIsConsoleOpen] = useState(false);
  const [isTtsLoading, setIsTtsLoading] = useState(false);
  const [fileName, setFileName] = useState("");
  const [logs, setLogs] = useState([
    { id: 1, time: new Date().toLocaleTimeString(), type: 'system', message: 'ðŸš€ VibeFlow Engine Initialized' }
  ]);

  // --- Helpers ---
  const addLog = (type, message) => {
    setLogs(prev => [...prev, { id: Date.now(), time: new Date().toLocaleTimeString(), type, message }]);
  };

  const loadFallback = () => {
    const mock = {
      concept: "The Treat Betrayal",
      hook: "Pov: You heard a wrapper crinkle.",
      music_vibe: "Suspenseful Orchestral",
      b_roll_suggestions: [{ time: "0:04", suggestion: "Close up of crinkling bag" }],
      captions: [{ scene: "Introduction", lines: [{ t: "0:01", text: "I know that sound." }] }],
      hooks: ["The Betrayal", "He Knows", "Treat Police"],
      viral_comments: ["The side eye is real", "Give him the treat!"]
    };
    setGamePlan(mock);
    addLog('system', 'Loaded local intelligence fallback.');
  };

  // --- Gemini API Calls ---
  const generateAIVisionPlan = async () => {
    setIsGenerating(true);
    addLog('api', 'Brainstorming viral strategy with Gemini...');
    
    const prompt = `
      Create a viral dog monologue plan for a video named "${fileName}".
      Return ONLY valid JSON with keys: "concept", "hook", "music_vibe", "captions" (array of objects {scene, lines: [{t, text}]}), "hooks" (array of 3 strings), "viral_comments" (array), "b_roll_suggestions" (array of {time, suggestion}).
    `;

    try {
      const response = await fetch(GEN_URL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          contents: [{ parts: [{ text: prompt }] }],
          generationConfig: { responseMimeType: "application/json" }
        })
      });

      if (!response.ok) throw new Error('API Error');
      const data = await response.json();
      const result = JSON.parse(data.candidates[0].content.parts[0].text);
      setGamePlan(result);
      addLog('success', 'Viral roadmap constructed.');
    } catch (e) {
      addLog('error', 'Intelligence link failed. Reverting to local cache.');
      loadFallback();
    } finally {
      setIsGenerating(false);
    }
  };

  const speakLine = async (text) => {
    if (!text || isTtsLoading) return;
    setIsTtsLoading(true);
    addLog('api', 'Synthesizing neural voice...');

    try {
      const response = await fetch(TTS_URL, {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({
          contents: [{ parts: [{ text: `Say this like a sarcastic dog: ${text}` }] }],
          generationConfig: {
            responseModalities: ["AUDIO"],
            speechConfig: { voiceConfig: { prebuiltVoiceConfig: { voiceName: "Puck" } } }
          }
        })
      });
      const data = await response.json();
      const audioData = data.candidates[0].content.parts[0].inlineData.data;
      const audio = new Audio(`data:audio/wav;base64,${audioData}`);
      audio.play();
      addLog('success', 'Audio preview active.');
    } catch (e) {
      addLog('error', 'Voice synthesis failed.');
    } finally {
      setIsTtsLoading(false);
    }
  };

  const handleNextStep = () => {
    if (step === 5) generateAIVisionPlan();
    setStep(s => s + 1);
  };

  return (
    <div className="min-h-screen bg-black text-white p-4 md:p-10 font-sans selection:bg-cyan-500">
      {/* Navigation */}
      <nav className="max-w-6xl mx-auto flex justify-between items-center mb-10">
        <div className="flex items-center gap-2">
          <BrainCircuit className="text-cyan-400" />
          <span className="font-black italic text-xl uppercase tracking-tighter">VibeFlow <span className="text-cyan-400">AI</span></span>
        </div>
        <div className="bg-zinc-900 px-4 py-2 rounded-full border border-zinc-800 flex items-center gap-2">
          <Zap size={14} className="text-yellow-400" />
          <span className="text-[10px] font-bold uppercase tracking-widest">10 Neural Units</span>
        </div>
      </nav>

      <main className="max-w-6xl mx-auto bg-zinc-950 border border-white/5 rounded-[3rem] p-8 md:p-12 relative overflow-hidden shadow-2xl min-h-[700px]">
        {/* Progress Bar */}
        <div className="flex gap-2 mb-12 justify-center">
          {[1,2,3,4,5,6].map(i => (
            <div key={i} className={`h-1 rounded-full transition-all duration-500 ${step >= i ? 'w-12 bg-cyan-500' : 'w-4 bg-zinc-800'}`} />
          ))}
        </div>

        {step < 6 ? (
          <div className="max-w-xl mx-auto text-center space-y-10 py-20 animate-in fade-in slide-in-from-bottom-4">
            <h2 className="text-6xl font-black uppercase italic leading-none tracking-tighter">
              {step === 5 ? "Neural <br/> Scanning" : "Design <br/> Your Vibe"}
            </h2>
            
            {step === 5 && (
              <div 
                onClick={() => {setFileName("VID_DOG_001.mp4");}}
                className={`aspect-video border-2 border-dashed rounded-3xl flex flex-col items-center justify-center transition-all cursor-pointer ${fileName ? 'border-cyan-500 bg-cyan-500/5' : 'border-zinc-800 hover:border-zinc-600'}`}
              >
                {fileName ? (
                  <div className="text-cyan-400 flex flex-col items-center gap-2">
                    <CheckCircle2 size={40} />
                    <p className="text-[10px] font-bold uppercase tracking-widest">{fileName}</p>
                  </div>
                ) : (
                  <div className="text-zinc-600 flex flex-col items-center gap-4">
                    <UploadCloud size={48} />
                    <p className="text-xs font-bold uppercase tracking-widest">Drop Raw Footage</p>
                  </div>
                )}
              </div>
            )}

            <button 
              onClick={handleNextStep}
              className="w-full py-6 bg-white text-black font-black uppercase italic tracking-tighter rounded-full text-xl hover:bg-cyan-400 transition-all"
            >
              {step === 5 ? "Invoke Intelligence" : "Next Phase"}
            </button>
          </div>
        ) : (
          <div className="grid grid-cols-1 lg:grid-cols-12 gap-10 animate-in fade-in duration-700">
            {/* Left: Mobile Preview */}
            <div className="lg:col-span-4 space-y-6">
              <div className="aspect-[9/16] bg-black rounded-[2.5rem] border border-white/10 relative overflow-hidden shadow-2xl">
                <div className="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-60" />
                <div className="absolute bottom-10 inset-x-6 text-center">
                  <p className="text-2xl font-black italic uppercase text-cyan-400 drop-shadow-lg">
                    {gamePlan?.captions?.[0]?.lines?.[0]?.text || "Thinking..."}
                  </p>
                </div>
              </div>

              <div className="bg-zinc-900/50 p-5 rounded-3xl border border-white/5">
                <p className="text-[10px] font-black uppercase text-zinc-500 mb-4 flex items-center gap-2">
                  <MessageCircle size={14} className="text-cyan-400" /> AI Growth Comments
                </p>
                <div className="space-y-2">
                  {gamePlan?.viral_comments?.slice(0, 2).map((c, i) => (
                    <div key={i} className="flex gap-2 items-center text-[10px] font-bold text-zinc-300 bg-black/40 p-2 rounded-xl border border-white/5">
                      <UserCircle size={14} className="text-zinc-600" /> "{c}"
                    </div>
                  ))}
                </div>
              </div>
            </div>

            {/* Right: Controls */}
            <div className="lg:col-span-8 space-y-8">
              <div className="flex gap-8 border-b border-white/5">
                {['plan', 'script', 'vibe'].map(tab => (
                  <button 
                    key={tab} 
                    onClick={() => setActiveTab(tab)}
                    className={`pb-4 text-[11px] font-black uppercase tracking-widest relative transition-all ${activeTab === tab ? 'text-cyan-400' : 'text-zinc-500'}`}
                  >
                    {tab === 'plan' ? 'Strategy' : tab === 'script' ? 'âœ¨ Script' : 'Engagement'}
                    {activeTab === tab && <div className="absolute bottom-0 left-0 right-0 h-0.5 bg-cyan-400 rounded-full" />}
                  </button>
                ))}
              </div>

              <div className="min-h-[400px]">
                {isGenerating ? (
                  <div className="flex flex-col items-center justify-center h-80 gap-6">
                    <div className="w-12 h-12 border-2 border-cyan-500 border-t-transparent rounded-full animate-spin" />
                    <p className="text-[10px] font-black uppercase tracking-[0.4em] text-cyan-400">Consulting Gemini Neural Network</p>
                  </div>
                ) : (
                  <div className="animate-in fade-in slide-in-from-right-4">
                    {activeTab === 'plan' && gamePlan && (
                      <div className="space-y-6">
                        <div className="bg-zinc-900/50 p-8 rounded-[2rem] border border-white/5">
                          <p className="text-[10px] font-black uppercase text-zinc-500 mb-2 tracking-widest">Visual DNA</p>
                          <h3 className="text-4xl font-black italic uppercase leading-none mb-4">"{gamePlan.concept}"</h3>
                          <div className="flex gap-4">
                            <span className="flex items-center gap-2 text-xs font-bold text-cyan-400 bg-cyan-500/10 px-3 py-1 rounded-full"><Music size={12}/> {gamePlan.music_vibe}</span>
                          </div>
                        </div>
                        <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                          {gamePlan.b_roll_suggestions?.map((b, i) => (
                            <div key={i} className="bg-zinc-900/30 p-4 rounded-2xl border border-white/5 flex gap-4 items-center">
                              <span className="text-[10px] font-mono text-cyan-500 bg-black px-2 py-1 rounded-md">{b.time}</span>
                              <p className="text-[10px] font-bold uppercase text-zinc-400">Add B-Roll: "{b.suggestion}"</p>
                            </div>
                          ))}
                        </div>
                      </div>
                    )}

                    {activeTab === 'script' && gamePlan && (
                      <div className="space-y-4">
                        {gamePlan.captions?.map((cap, i) => (
                          <div key={i} className="bg-zinc-900/30 p-6 rounded-3xl border border-white/5 group">
                            <div className="flex justify-between items-center mb-4">
                              <span className="text-[10px] font-black uppercase text-cyan-400 bg-cyan-500/10 px-3 py-1 rounded-full">{cap.scene}</span>
                              <button 
                                onClick={() => speakLine(cap.lines?.[0]?.text)}
                                className="text-[10px] font-black uppercase text-zinc-500 hover:text-white flex items-center gap-2"
                              >
                                <Volume2 size={14}/> {isTtsLoading ? '...' : 'Preview Voice'}
                              </button>
                            </div>
                            {cap.lines?.map((line, j) => (
                              <div key={j} className="flex gap-6 items-start">
                                <span className="text-[10px] font-mono text-zinc-700 pt-1">{line.t}</span>
                                <p className="text-xl font-black italic uppercase text-zinc-300">"{line.text}"</p>
                              </div>
                            ))}
                          </div>
                        ))}
                      </div>
                    )}

                    {activeTab === 'vibe' && gamePlan && (
                      <div className="grid gap-4">
                        {gamePlan.hooks?.map((hook, i) => (
                          <div key={i} className="bg-zinc-900/50 p-6 rounded-3xl border border-white/5 flex justify-between items-center group hover:border-cyan-500/50 transition-all cursor-pointer">
                            <span className="text-xl font-black italic uppercase">"{hook}"</span>
                            <Star size={18} className="text-zinc-800 group-hover:text-cyan-400 transition-all" />
                          </div>
                        ))}
                      </div>
                    )}
                  </div>
                )}
              </div>

              <div className="pt-8">
                <button className="w-full py-6 bg-white text-black font-black uppercase italic tracking-tighter rounded-full text-lg hover:bg-cyan-400 transition-all shadow-xl shadow-cyan-500/10">
                  Export Neural Edit
                </button>
              </div>
            </div>
          </div>
        )}
      </main>

      {/* Terminal Footer */}
      <div className={`fixed bottom-0 right-10 w-full max-w-lg transition-all duration-500 z-50 ${isConsoleOpen ? 'translate-y-0' : 'translate-y-[calc(100%-48px)]'}`}>
        <div className="bg-zinc-900 border border-white/10 rounded-t-3xl shadow-2xl overflow-hidden">
          <button onClick={() => setIsConsoleOpen(!isConsoleOpen)} className="w-full p-4 flex justify-between items-center hover:bg-zinc-800 transition-all">
             <div className="flex items-center gap-3">
               <BrainCircuit size={14} className="text-cyan-400" />
               <span className="text-[10px] font-black uppercase tracking-widest text-zinc-400">Gemini Neural Logs</span>
             </div>
             {isConsoleOpen ? <ChevronDown size={16}/> : <ChevronUp size={16}/>}
          </button>
          <div className="h-64 p-6 overflow-y-auto font-mono text-[9px] bg-black/50 space-y-2">
             {logs.map(log => (
               <div key={log.id} className="flex gap-3">
                 <span className="text-zinc-700">[{log.time}]</span>
                 <span className={`uppercase font-bold ${log.type === 'success' ? 'text-cyan-500' : log.type === 'error' ? 'text-red-500' : 'text-zinc-500'}`}>{log.type}</span>
                 <span className="text-zinc-400">{log.message}</span>
               </div>
             ))}
          </div>
        </div>
      </div>
    </div>
  );
};

export default App;
